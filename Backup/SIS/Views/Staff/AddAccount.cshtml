@model SIS.Models.Staff_Info

@{
    ViewBag.Title = "Add Account";
}

<h2>Edit</h2>

@using (Html.BeginForm("AddAccount","Staff",FormMethod.Post)) {
    @Html.ValidationSummary(true)
    @Html.Hidden("staff_id", Model.staff_id)
    var username = "";
    var password = "";
    username = Model.staff_fname[0] + Model.staff_lname;
    password = Model.staff_fname[0] + Model.staff_lname;
    
    <fieldset>
        <legend>Staff_Info</legend>

        <div class="editor-label">
            Username
        </div>
        <div class="editor-field">
            <input type="text" name="username" value ="@username"/>
        </div>

        <div class="editor-label">
            Password
        </div>
        <div class="editor-field">
            <input type="text" name="password" value ="@password"/>
        </div>

        <div class="editor-label">
            User Type
        </div>
        <div class="editor-field">
            @Html.DropDownList("user_type")
        </div>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
