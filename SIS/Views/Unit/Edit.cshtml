@model SIS.Models.Unit

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm("EditData","Unit",FormMethod.Get))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Unit</legend>
        @Html.HiddenFor(model => model.unit_id)
        @Html.HiddenFor(model => model.created_by)
        @Html.HiddenFor(model => model.created_date)

        <div class="editor-label">
            @Html.LabelFor(model => model.unit_code)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.unit_code)
            @Html.ValidationMessageFor(model => model.unit_code)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.unit_name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.unit_name)
            @Html.ValidationMessageFor(model => model.unit_name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.active_flag)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.active_flag)
            @Html.ValidationMessageFor(model => model.active_flag)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
