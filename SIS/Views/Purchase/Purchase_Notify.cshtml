@model IEnumerable<SIS.Models.PT_OrderedList_vw>

 <li class="dropdown hidden-xs">
    <a data-toggle="dropdown" class="tm-notification" href=""><i class="tmn-counts">@Model.Count()</i></a>
    <div class="dropdown-menu dropdown-menu-lg pull-right">
        <div class="listview" id="nav-todo">
            <div class="lv-header">
                PURCHASE
                <ul class="actions">
                    <li class="dropdown">
                        <a href="" data-clear="notification">
                            <i class="md md-done-all"></i>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="lv-body c-overflow">
                @foreach(var item in Model){
                    <a class="lv-item" href="@Url.Action("Ordered_Lists_Items", "Purchase", new { id=item.pt_id})">
                        <div class="media">
                            <div class="pull-left">
                                <img class="lv-img-sm" src="/Images/img/profile-pics/1.jpg" alt="">
                            </div>
                            <div class="media-body">
                                <div class="lv-title">@Html.DisplayFor(modelItem=>item.purchase_name) <span class="badge badge-primary">@Html.DisplayFor(modelItem=>item.no_item)</span></div>
                                <small class="lv-small">Purchased from @Html.DisplayFor(modelItem=>item.supplier_name) lasts <span class="text-success">@String.Format("{0:d}",item.purchase_date)</span></small>
                            </div>
                        </div>
                    </a>
                }
            <a class="lv-footer" href="@Url.Action("Ordered_Lists", "Purchase")">View all</a>
        </div>
                    
    </div>
</li>
