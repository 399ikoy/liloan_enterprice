@model SIS.Models.Account_Info

@{
    ViewBag.Title = "Add Account";
}

<h2>Edit</h2>

@using (Html.BeginForm("PasswordChange","Accounts",FormMethod.Post)) {
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model=>model.account_info_id)
    @Html.HiddenFor(model=>model.user_type)
    @Html.HiddenFor(model=>model.username)
    @Html.HiddenFor(model=>model.active_flag)
    
    <fieldset>
        <legend>Staff_Info</legend>

        <div class="editor-label">
            Username
        </div>
        <div class="editor-field">
            @Html.DisplayFor(model=>model.username)
        </div>

        <div class="editor-label">
            Password
        </div>
        <div class="editor-field">
            @Html.EditorFor(model=>model.password)
        </div>

        <div class="editor-label">
            User Type
        </div>
        <div class="editor-field">
            @Html.DisplayFor(model=>model.user_type)
        </div>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
